
<h1 class="mt-5">@ViewBag.Title</h1>

<br>

<div class="row text-right">
    <div class="col">
        <a class="btn btn-success" href="@Url.Action("AddEdit", "Usuario")" role="button">Adicionar Usuário</a>
    </div>
</div>

<br>

<div class="table-responsive-sm">
    <table id="myTable" class="table table-sm table-striped table-borderless table-hover">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Data Criação</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (FanSoft.Sotre.Domain.Entities.Usuario item in Model)
            {
                <tr id="Tr-@item.Id">
                    <th scope="row">@item.Id</th>
                    <td>@item.Nome</td>
                    <td>@item.Email</td>
                    <td>@item.DataCriacao.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-warning text-white" href="@Url.Action("AddEdit", "Usuario", new { id = item.Id})" role="button">  <i class="fa fa-pencil fa-lg" aria-hidden="true"></i> </a>
                        &nbsp;
                        <a class="btn btn-danger" href="@Url.Action("Excluir", "Usuario", new { id = item.Id})" role="button">  <i class="fa fa-trash fa-lg" aria-hidden="true"></i> </a>
                        @*<a class="btn btn-outline-danger" href="javascript:void(0);" onclick="ExcluirUsuario(@item.Id, '@item.Nome');" role="button">  <i class="fa fa-trash-o fa-lg" aria-hidden="true"></i> </a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
