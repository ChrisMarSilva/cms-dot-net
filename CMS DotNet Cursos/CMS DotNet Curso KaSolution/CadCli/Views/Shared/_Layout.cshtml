        function ExcluirProduto(id, nome) {
                      

            let resp = confirm(`Deseja Excluir o Cliente ${nome}?`);
            console.log("Resultado = " + resp);

            if (!resp) {
                console.log("Metodo abortado....");
                return;
            }


            try {

                $.ajax({
                    type: "post",
                    url: `/Produtos/Excluir/${id}`,
                    //data: { Id: id },
                    success: function (result) {
                        //alert("Ok");
                        //location.reload();
                       // $(`#Tr-${id}`).remove();
                        $(`#Tr-${id}`).closest('tr').fadeOut(400);
                    },
                    error: function (request, status, error) { alert(request.responseText); }
                });

            }
            catch (ex) {
                alert(ex.message);
            }
        }

    </script>


