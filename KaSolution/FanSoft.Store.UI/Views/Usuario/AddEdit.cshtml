
<h1 class="mt-5">@ViewBag.Title</h1>

<br>

<form method="post" action="@Url.Action("AddEdit", "Usuario")">
    @*<input type="hidden" name="Id" value="@Model?.Id">
        <input type="hidden" name="DataCriacao" value="@Model?.DataCriacao">*@
    <div class="form-group row">
        <label class="col-sm-1 col-form-label font-weight-bold text-left">Nome:</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="Nome" placeholder="Seu Nome" value="@Model?.Nome" autofocus required>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-1 col-form-label font-weight-bold text-left">Email:</label>
        <div class="col-sm-4">
            <input type="email" class="form-control" name="Email" placeholder="Seu Email" value="@Model?.Email" required>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-1 col-form-label font-weight-bold text-left">Senha:</label>
        <div class="col-sm-4">
            <input type="password" class="form-control" name="Senha" placeholder="Sua Senha" value="" required>
        </div>
    </div>
    <div class="form-group row text-center">
        <div class="col-sm-1">
        </div>
        <div class="col-sm-4">
            <button type="submit" class="btn btn-success font-weight-bold">SALVAR</button>
            <button type="reset" class="btn btn-outline-dark font-weight-bold">LIMPAR</button>
            <a class="btn btn-dark font-weight-bold" href="@Url.Action("Index", "Usuario")" role="button">VOLTAR</a>
        </div>
    </div>
</form>
